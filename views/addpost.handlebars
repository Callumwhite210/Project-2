 <div class="container container-bg">
    <div class="row">
      <div class="col-lg d-flex justify-content-center">
        <form id="cms" class="post-container post-form">
          <div class="form-group">
            <label for="User" class="pt-3">Username:</label>
            <input type="text" class="form-control" id="user" required="true">

            <br/>
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" required>
            <br/>
            <label for="post-body">Post:</label>

            <textarea class="form-control" rows="10" id="post-body" placeholder="Your post is limited to 10 lines." required="true"></textarea>
            <div class="form-group">
              <label for="category" class="pt-3">Select Category:</label>
              <select class="custom-select" id="category">
                <option value="Personal">Personal</option>
                <option value="Product Review">Product</option>
                <option value="Political">Political</option>
              </select>
            </div>
            <br />
            <a class="btn btn-lg btn-secondary" role="button" id="home-btn">Back</a>
            <button type="submit" class="btn btn-success submit btn-lg float-right" id="submit-btn">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

<!--Modal Popoup when new post is submitted-->
      <div class="modal center" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title">Your post has been added.</h4>
              <button type="button" class="close modal-btn" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          </div>
        </div>
      </div>
