 <div class="container">
    <div class="row">
      <div class="row">
        <div class="col-sm-2 mt-4">
          <a class="btn btn-secondary" role="button" id="home-btn">Back</a>
        </div>
      </div>
      <div class="col-md-5 offset-md-3">
        <form class="needs-validation" id="cms">
          <div class="form-group">
            <label for="user">Username:</label>
            <input type="text" class="form-control" id="user" required>
            <br/>
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" required>
            <br/>
            <label for="post-body">Post:</label>
            <textarea class="form-control" rows="10" id="post-body" required></textarea>
            <br/>
            <label for="category">Select Category:</label>
            <select class="custom-select" id="category">
              <option value="Personal">Personal</option>
              <option value="Product Review">Product</option>
              <option value="Political">Political</option>
            </select>
            <br />
          </div>
          <button type="submit" class="btn btn-success submit btn-lg" id="submit-btn">Submit</button>
        </form>
      </div>
    </div>
  </div>
